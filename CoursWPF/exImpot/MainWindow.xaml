        <RadioButton x:Name="rOui" Content="Oui" HorizontalAlignment="Left" Margin="174,169,0,0" VerticalAlignment="Top" Checked="ROui_Checked"/>
        <RadioButton x:Name="rNon" Content="Non" HorizontalAlignment="Left" Margin="226,169,0,0" VerticalAlignment="Top" Checked="RNon_Checked"/>
        <Button x:Name="calcul" Content="Calculer" HorizontalAlignment="Left" Margin="200,217,0,0" VerticalAlignment="Top" Width="75" Click="Calcul_Click"/>
