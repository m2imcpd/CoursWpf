<Window x:Class="BanqueWpf.ListeOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BanqueWpf"
        mc:Ignorable="d"
        Title="Liste Opérations" Height="410.584" Width="394.343">
    <Grid>
        <ListView x:Name="listeOperationsView" HorizontalAlignment="Left" Height="361" Margin="10,10,0,0" VerticalAlignment="Top" Width="368">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Montant" DisplayMemberBinding="{Binding Montant}" Width="200"/>
                    <GridViewColumn Header="Date opération" DisplayMemberBinding="{Binding DateOperation}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
